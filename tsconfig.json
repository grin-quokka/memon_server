{
  "compilerOptions": {
    "module": "commonjs",
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "locale": "ko",
    "noImplicitAny": false,
    "charset": "utf8",
    "target": "es6",
    "outDir": "./dist",
    "baseUrl": "./src",
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
